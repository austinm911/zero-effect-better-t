{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check": {
			"cache": false
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev:backend": {
			"dependsOn": [
				"zero:cache",
				"@zero-effect/backend#db:studio"
			],
			"cache": false,
			"persistent": true
		},
		
		"dev:frontend": {
			"dependsOn": ["@zero-effect/web#dev"],
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		},
		"db:start": {
			"cache": false
		},
		"db:stop": {
			"cache": false,
			"persistent": true
		},
		"db:watch": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"db:down": {
			"cache": false,
			"persistent": true
		},
		"zero:cache": {
			"cache": false
		}
	}
}
